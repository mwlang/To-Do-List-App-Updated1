<h1>Todo Items</h1>
 
<h2> Todoo: </h2>
<% @todos.each do |t| %>
<p>
	<strong><%= t.name %></strong>
	  <small><%= link_to "Mark as Done", todo_path(t, 'todo[done]' => true), :method => :put %></small>
  <% if current_user.admin? %>
	  <small><%= link_to "Edit", edit_todo_path(t), :method => :get %></small>
	<% end %>

</p>
<% end %>
 
<h2> Todone: </h2>
<% @todone.each do |t| %>
<p>
	<%= t.name %>
	<small><%= link_to "Remove", t, :confirm => "is it okay to remove this from the list?", :method => :delete %></small>
</p>
<% end %>
 
<p><%= link_to "Add an item to the list", new_todo_path %></p>